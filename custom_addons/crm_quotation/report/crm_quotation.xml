    <template id="quotation_external_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

<!--        <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}"><t t-raw="0"/></t>-->
        <t t-call="crm_quotation.quotation_external_layout_standard"><t t-raw="0"/></t>

    </template>
    <template id="report_crm_quotation" >
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="crm_quotation.quotation_external_layout">
                    <style type="text/css">
                        table {
                          font-family: Calibri, Times New Roman, roboto, arial, sans-serif;
                          font-size: 13pt;
                          border-collapse: collapse;
                          width: 100%;
                        }

                        td, th {
                          border: 0px solid #dddddd;
<!--                              text-align: left;-->
                          padding: 8px;
                        }

