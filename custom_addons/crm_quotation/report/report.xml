<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_euro_no_margin" model="report.paperformat">
        <field name="name">European A4 without borders</field>
        <field name="default" eval="False" />
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">15</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">30</field>
    </record>

    <record id="action_report_crm_quotation" model="ir.actions.report">
        <field name="name">In báo giá</field>
        <field name="model">crm.lead</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">crm_quotation.report_crm_quotation</field>
        <field name="report_file">crm_quotation.report_crm_quotation</field>
        <field name="print_report_name">'Quotation ID - %s' % (object.name or 'Attendee').replace('/','')</field>
        <field name="paperformat_id" ref="paperformat_euro_no_margin"/>
        <field name="binding_model_id" ref="model_crm_lead"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
