                <xpath expr="//notebook" position="inside">
                    <page name="geolocalize" string="Google Maps">
                        <group colspan="2" col="2">
                            <separator string="Tọa độ tài sản" colspan="2"/>
                            <div>
                                <span class="oe_inline"> ( </span>
                                <span> Vĩ độ : </span>
                                <field name="customer_latitude" class="oe_inline" no_label="1" widget="nhap_toado"/>
                                <span> : Kinh độ : </span>
                                <field name="customer_longitude" class="oe_inline" nolabel="1" widget="nhap_toado"/>
