<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">
    <record model="ir.module.category" id="mhd_valuation.module_mhd_valuation">
        <field name="name">MHD Valuation</field>
    </record>
    <record model="res.groups" id="nhan_vien_tham_dinh">
        <field name="name">Chuyên viên thẩm định</field>
        <field name="category_id" ref="mhd_valuation.module_mhd_valuation"/>
    </record>
    <record model="ir.rule" id="thanh_toan_nhan_vien_tham_dinh" >
        <field name="name">Thanh toán (Nhân viên thẩm định)</field>
        <field name="model_id" ref="model_mhd_thanhtoan" />
        <field name="domain_force">['|', '|', ('nhanvien_tao', '=', user.id), ('nhanvien_xacnhan', '=', user.id), ('nhanvien_xacnhan', '=', False)]</field>
        <field name="groups" eval="[(4, ref('nhan_vien_tham_dinh'))]"/>
    </record>
    <record model="ir.rule" id="task_nhan_vien_tham_dinh_rule">
        <field name="name">Project task - Nhân viên thẩm định</field>
        <field name="model_id" ref="model_project_task"/>
        <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('nhan_vien_tham_dinh'))]"/>
    </record>

    <record model="res.groups" id="nhan_vien_ke_toan">
        <field name="name">Kế toán viên</field>
        <field name="category_id" ref="mhd_valuation.module_mhd_valuation"/>
    </record>
    <record model="res.groups" id="kiem_soat_vien">
        <field name="name">Kiểm soát viên</field>
        <field name="category_id" ref="mhd_valuation.module_mhd_valuation"/>
    </record>

    <record model="ir.rule" id="task_kiem_soat_vien_rule">
        <field name="name">Project task - Kiểm soát viên</field>
        <field name="model_id" ref="model_project_task"/>
        <field name="domain_force">['|', ('thamdinhvien_id', '=', user.id), ('thamdinhvien_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('kiem_soat_vien'))]"/>
    </record>

    <record model="res.groups" id="ban_giam_doc">
        <field name="name">Ban giám đốc</field>
        <field name="category_id" ref="mhd_valuation.module_mhd_valuation"/>
    </record>
    <record model="res.groups" id="nhan_vien_kinh_doanh">
        <field name="name">Nhân viên kinh doanh</field>
        <field name="category_id" ref="mhd_valuation.module_mhd_valuation"/>
    </record>
    <record model="res.groups" id="back_office">
        <field name="name">Back Office</field>
        <field name="category_id" ref="mhd_valuation.module_mhd_valuation"/>
    </record>
    <record model="res.groups" id="it">
        <field name="name">IT</field>
        <field name="category_id" ref="mhd_valuation.module_mhd_valuation"/>
    </record>
    <record model="res.groups" id="hanh_chinh_nhan_su">
        <field name="name">Hành chính - Nhân sự</field>
        <field name="category_id" ref="mhd_valuation.module_mhd_valuation"/>
    </record>

</data>

