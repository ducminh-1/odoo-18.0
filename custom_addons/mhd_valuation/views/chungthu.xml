<?xml version="1.0" encoding="utf-8"?>
<odoo>
    # ----------------------------------------
    # Form view
    # ----------------------------------------
    <record id="view_mhd_chungthu_form" model="ir.ui.view">
        <field name="name">mhd.chungthu.form</field>
        <field name="model">mhd.chungthu</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" class="o_task_name text-truncate" placeholder="Tên tài sản"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="datalist_id" placeholder="Chọn tên tài sản cần lấy số" options="{'no_open': True, 'no_create': True}" domain="[('nhanvien', '=', uid)]"/>
                            <field name="nhanvien" placeholder="Nhân viên thực hiện"/>
                            <field name="chungthu_date"/>
                            <field name="tinhtrangphathanh"/>
                        </group>
                        <group>
                            <field name="hopdong_id"/>
                            <field name="phuongphapthamdinh"/>
                            <field name="mucdichthamdinh"/>
                            <field name="loaitaisan"/>
                        </group>
                    </group>
<!--                    <notebook>-->
<!--                        <page string="Thông tin thanh toán" name="thanh_toan">-->
<!--                            <field name="thanhtoan_line"/>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    # ----------------------------------------
    # Tree view
    # ----------------------------------------

    <record id="mhd_chungthu_tree_view" model="ir.ui.view">
            <field name="name">mhd.chungthu.tree.view</field>
            <field name="model">mhd.chungthu</field>
            <field name="arch" type="xml">
                <list string="Chứng thư" multi_edit="1">
                    <field name="name" optional="show"/>
                    <field name="chungthu_date" optional="show"/>
                    <field name="tinhtrangphathanh" optional="show"/>
                    <field name="nhanvien" optional="show"/>
                    <field name="datalist_id" optional="show"/>
                    <field name="phuongphapthamdinh" optional="hide"/>
                    <field name="mucdichthamdinh" optional="hide"/>

                </list>
            </field>
        </record>

    # ----------------------------------------
    # Menu
    # ----------------------------------------
    <record id="action_mhd_chungthu" model="ir.actions.act_window">
        <field name="name">Chứng thư</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mhd.chungthu</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{}</field>
<!--        <field name="context">{'search_default_responsible_id': 1}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo số hợp đồng đầu tiên!
            </p>
        </field>
    </record>

    <menuitem id="menu_mhd_chungthu"
              name="Số chứng thư"
              parent="menu_mhd_layso"
              action="action_mhd_chungthu"
              sequence="10"/>

</odoo>