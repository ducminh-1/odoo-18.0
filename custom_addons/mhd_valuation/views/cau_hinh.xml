    # ----------------------------------------
    # Form view
    # ----------------------------------------

    <record id="view_mhd_vitri_tinh_form" model="ir.ui.view">
        <field name="name">mhd.vitri.tinh.form</field>
        <field name="model">mhd.vitri.tinh</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="matinh"/>
                                <field name="tinhly"/>
                                <field name="khuvuc"/>
                            </group>
                            <group>
                                <field name="danso"/>
                                <field name="dientich"/>
                                <field name="donvihanhchinh"/>
                                <field name="biensoxe"/>
                                <field name="mavung"/>
                            </group>
                        </group>
                        <!-- <field name="vitri_quan">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="maquan"/>
                            </tree>
                        </field> -->
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_mhd_customer_groups_form" model="ir.ui.view">
        <field name="name">mhd.customer.groups.form</field>
        <field name="model">mhd.customer.groups</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên nhóm khách hàng"/>
                        </h1>
                    </div>
                        <group>
                            <field name="khachhang_name">
                                <tree editable="bottom">
                                    <field name="name" placeholder="Tên Đối tượng khách hàng"/>
                                </tree>
                            </field>
                        </group>
                </sheet>
            </form>
        </field>
    </record>
