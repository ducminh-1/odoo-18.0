    <record id="mhd_vitri_chungcu_tree_view" model="ir.ui.view">
        <field name="name">mhd.vitri.chungcu.tree.view</field>
        <field name="model">mhd.vitri.chungcu</field>
        <field name="arch" type="xml">
            <list string="Chung cư">
                <field name="name"/>
                <field name="vitri_quan"/>
            </list>
        </field>
    </record>

