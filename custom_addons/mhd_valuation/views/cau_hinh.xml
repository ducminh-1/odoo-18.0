        <field name="arch" type="xml">
            <list string="Tên Quận/ Huyện">
                <field name="name"/>
                <field name="maquan"/>
                <field name="vitri_tinh"/>
                <field name="dientich" sum="Tổng diện tích"/>
                <field name="danso" sum="Tổng dân số"/>
                <field name="donvihanhchinh" sum="Tổng số đơn vị hành chính"/>
            </list>
        </field>
    </record>

    <record id="mhd_vitri_tinh_tree_view" model="ir.ui.view">
