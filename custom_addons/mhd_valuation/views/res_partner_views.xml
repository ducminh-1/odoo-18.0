<?xml version="1.0" encoding="utf-8"?>
<odoo>

         <!--  Partners inherited form -->
        <record id="view_customer_groups_info_form" model="ir.ui.view">
            <field name="name">res.partner.customer.groups.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                
                <!-- Thay field VAT và thêm các field khác -->
                <xpath expr="//field[@name='vat']" position="replace">
                    <field name="vat" invisible="company_type != 'company'"/>
                    <field name="cmnd" invisible="company_type != 'person'"/>
                    <field name="cmnd_ngaycap" invisible="company_type != 'person'"/>
                    <field name="cmnd_noicap" invisible="company_type != 'person'"/>
                    <field name="daidien" invisible="company_type != 'company'"/>
                    <field name="daidien_chucvu" invisible="company_type != 'company'"/>
                    <field name="khachhang_groups" invisible="company_type != 'company'"/>
                    <field name="khachhang_name" invisible="company_type != 'company'" domain="[('khachhang_groups', '=', khachhang_groups)]"/>
                </xpath>

                <!-- Thêm field relationship và relative_partner_id trước category_id -->
                <xpath expr="//field[@name='category_id']" position="before">
                    <field name="relationship"/>
                    <field name="relative_partner_id"/>
                </xpath>

            </field>
        </record>



        <record id="view_partner_inherit_tree_view" model="ir.ui.view">
            <field name="name">res.partner.inherit.tree.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="title" optional="hide"/>
                </xpath>
            </field>
        </record>

</odoo>
