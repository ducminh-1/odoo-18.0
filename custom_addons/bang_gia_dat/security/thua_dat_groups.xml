<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="bang_gia_dat.module_bang_gia_dat">
            <field name="name">Người dùng Bảng giá đất</field>
        </record>
        <!-- Nhóm Người giao việc -->
        <record model="res.groups" id="group_giao_viec">
            <field name="name">Người giao việc</field>
            <field name="category_id" ref="bang_gia_dat.module_bang_gia_dat"/>
        </record>
        <!-- Nhóm Người nhập liệu -->

        <record model="res.groups" id="group_nhap_lieu">
            <field name="name">Người nhập liệu</field>
            <field name="category_id" ref="bang_gia_dat.module_bang_gia_dat"/>
        </record>

        <record model="res.groups" id="group_dia_chinh">
            <field name="name">Địa chính</field>
            <field name="category_id" ref="bang_gia_dat.module_bang_gia_dat"/>
        </record>

        <record id="rule_thua_dat_user_own_only" model="ir.rule">
            <field name="name">Người nhập liệu chỉ xem bản ghi được giao</field>
            <field name="model_id" ref="model_thua_dat"/>
            <field name="domain_force">[('nguoi_nhap_lieu','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_nhap_lieu'))]"/>
        </record>
    </data>
</odoo>
