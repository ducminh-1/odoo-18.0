<odoo>
    <!-- Tỉnh/Thành -->
    <record id="view_tinhthanh_tree" model="ir.ui.view">
        <field name="name">dm.tinhthanh.tree</field>
        <field name="model">dm.tinhthanh</field>
        <field name="arch" type="xml">
            <tree><field name="name"/></tree>
        </field>
    </record>
    <record id="view_tinhthanh_form" model="ir.ui.view">
        <field name="name">dm.tinhthanh.form</field>
        <field name="model">dm.tinhthanh</field>
        <field name="arch" type="xml">
            <form><field name="name"/></form>
        </field>
    </record>

    <!-- Quận/Huyện -->
    <record id="view_quanhuyen_tree" model="ir.ui.view">
        <field name="name">dm.quanhuyen.tree</field>
        <field name="model">dm.quanhuyen</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="tinh_thanh_id"/>
            </tree>
        </field>
    </record>
    <record id="view_quanhuyen_form" model="ir.ui.view">
        <field name="name">dm.quanhuyen.form</field>
        <field name="model">dm.quanhuyen</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="tinh_thanh_id"/>
            </form>
        </field>
    </record>

    <!-- Xã/Phường -->
    <record id="view_xaphuong_tree" model="ir.ui.view">
        <field name="name">dm.xaphuong.tree</field>
        <field name="model">dm.xaphuong</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="merged_from"/>
                <field name="tinh_thanh_id"/>
                <field name="quan_huyen_id"/>
            </tree>
        </field>
    </record>
    <record id="view_xaphuong_form" model="ir.ui.view">
        <field name="name">dm.xaphuong.form</field>
        <field name="model">dm.xaphuong</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title pr-0">
                        <h3 class="d-flex flex-row justify-content-between">
                            <field name="name" class="o_task_name text-truncate" placeholder="Tên đường"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="merged_from"/>
                        </group>
                        <group>
                            <field name="quan_huyen_id"/>
                            <field name="tinh_thanh_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tinhthanh" model="ir.actions.act_window">
        <field name="name">Tỉnh/Thành</field>
        <field name="res_model">dm.tinhthanh</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_quanhuyen" model="ir.actions.act_window">
        <field name="name">Quận/Huyện</field>
        <field name="res_model">dm.quanhuyen</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_xaphuong" model="ir.actions.act_window">
        <field name="name">Xã/Phường</field>
        <field name="res_model">dm.xaphuong</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_dm_diadanh_root" name="Địa danh" parent="menu_duong_root"/>
    <menuitem id="menu_tinhthanh" name="Tỉnh/Thành" parent="menu_dm_diadanh_root" action="action_tinhthanh"/>
    <menuitem id="menu_quanhuyen" name="Quận/Huyện" parent="menu_dm_diadanh_root" action="action_quanhuyen"/>
    <menuitem id="menu_xaphuong" name="Xã/Phường" parent="menu_dm_diadanh_root" action="action_xaphuong"/>


</odoo>
